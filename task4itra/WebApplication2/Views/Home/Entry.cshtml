        <h1>
            Invalid username or password!
            <image src="https://thypix.com/wp-content/uploads/sad-cat-10.jpg" width = "800">
            </h1>
        } else if(Model.ElementAt(0).user_id == -1)
        {
            <h1>User is blocked :(
                <image src="https://thypix.com/wp-content/uploads/sad-cat-10.jpg" width="800">
            </h1>
        }
        else {
            <label for="Block"><b>Block</b></label>
            <input type="text" placeholder="id you want bo block" id="block" name="block">
            <button  asp-area="" asp-controller="Home" asp-action="Block">Block</button>

