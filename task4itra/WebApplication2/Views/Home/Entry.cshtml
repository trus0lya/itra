@model List<WebApplication2.Models.User>


<haed>
    <style>
        table {
     
            border-collapse: separate;
            border: 3px solid grey;
            width: 600px;
        }


        th, td {
            border: 1px solid grey;
            padding: 10px 15px;
        }

