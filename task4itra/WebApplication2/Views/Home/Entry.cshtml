            <input type="text" placeholder="id you want bo unblock" id="unblock" name="unblock">
            <button asp-area="" asp-controller="Home" asp-action="Unblock">Unblock</button>

            <label for="Delete"><b>Delete</b></label>
            <input type="text" placeholder="id you want bo delete" id="delete" name="delete">
            <button  asp-area="" asp-controller="Home" asp-action="Delete">Delete</button>
    <table border="1", width="400">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Register Date</th>
            <th>Last Seen</th>
            <th>Status</th>
        </tr>
